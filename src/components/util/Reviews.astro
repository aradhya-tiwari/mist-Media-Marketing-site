    <div class="flex items-center mb-4">
        <Image
            class="w-10 h-10 me-4 rounded-full"
            src={img || "/imagePlaceholder.svg"}
            alt=""
        />
        <div class="font-medium text-white">
            <p>
                {name}
                <br />
                <p class="text-[#c3c3c3]">
                    {company}
                </p>
            </p>
        </div>
    </div>
    <div class="flex items-center mb-1 space-x-1 rtl:space-x-reverse">
