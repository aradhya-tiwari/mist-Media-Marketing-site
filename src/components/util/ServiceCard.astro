---
const { title, description, src = "/imagePlaceholder.svg" } = Astro.props;
function truncate(str: string, len: number) {
    let text = str.slice(0, len);
    if (str.length > len) return text + "...";
    else return text;
}
---

<div
    id="serv"
    class="flex flex-col justify-between w-60 md:w-80 rounded-lg md:h-[500px] h-[450px] md:m-12 m-6 border-2 border-secondary shadow-lg hover:scale-110 transition-all hover:shadow-primary bg-bg"
>
    <div class="w-2/3 h-[29%] m-auto my-[1%] overflow-hidden">
        <img src={src} alt="" srcset="" class="h-full m-auto" />
    </div>
    <div
        class="w-full h-[60%] rounded-t-[2.5rem] rounded-b-md overflow-hidden text-white bg-secondary hover:h-[90%] transition-all"
    >
        <h1 class="m-5 md:text-3xl text-xl font-semibold font-primaryFont">
            {title}
        </h1>
        <p
            class="relative mx-5 mt-5 md:text-lg text-sm h-[60%] tracking-wider overflow-hidden"
        >
            {description}
            <span
                class="bg-gradient-to-b from-transparent to-secondary w-full absolute h-10 bottom-0 left-0"
            ></span>
        </p>
        <div
            id="reachOut"
            class="md:text-xl hidden cursor-pointer my-2 text-base text-black w-[80%] m-auto bg-primary md:px-5 md:py-2 px-2 py-1 rounded-full font-semibold hover:scale-110 transition-all"
        >
            <a href="/contact">Reach Out to Us</a>
        </div>
    </div>
</div>
<style>
    #serv:hover #reachOut {
        display: block;
    }
</style>
<script></script>
