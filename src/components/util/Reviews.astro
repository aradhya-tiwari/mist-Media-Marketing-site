---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
const {
    name = "name",
    image,
    company = "company",
    service = "Serivce",
    description = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Earum, animi itaque? Suscipit excepturi vero, sunt minima eveniet praesentium. Quasi obcaecati voluptates fugit iusto dignissimos officia modi numquam suscipit. Architecto deserunt magni consequuntur!",
} = Astro.props;

let getImg = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/reviewsImage/*.(jpg|jpeg|png)",
);
// console.log(getImg);
// console.log("/src/assets/reviewsImage/" + image);
let img = getImg["/src/assets/reviewsImage/" + image]() as any;
