---
import ServiceCardLong from "../../components/util/ServiceCardLong.astro";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.svelte";
const services = await Astro.glob("../../data/service/*.json");
---

<Layout title="Services">
    <Header client:load />
    <img src="/imagePlaceholder.svg" alt="" class="h-[80vh] w-auto m-auto" />
    <div
        class="pt-20 md:p-10 p-2 m-auto rounded-2xl md:w-[80%] w-[95%] bg-secondary"
    >
        <h1 class="text-4xl text-white">Services</h1>
        {services.map((el) => <ServiceCardLong data={el} />)}
    </div>
</Layout>
